{
  "name": "@mobilabs/kapp",
  "version": "1.6.1",
  "dbVersion": "1.6.1",
  "description": "A boilerplate for a slim Node.js App server",
  "main": "index.js",
  "bin": {
    "kapp": "./bin/kapp.js"
  },
  "scripts": {
    "app": "node server/start.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov mocha ./test/main.js --exit",
    "display-coverage": "opener ./coverage/lcov-report/index.html",
    "check-coverage": "nyc check-coverage --statements 10 --branches 5 --functions 20 --lines 10",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "report": "nyc report",
    "makeprod": "sh tasks/prod.sh _prod-$npm_package_version && node tasks/prod.js _prod-$npm_package_version",
    "prepare": "husky install",
    "doc": ""
  },
  "nyc": {
    "include": [
      "server/**/*.js"
    ],
    "exclude": [
      "server/config.js",
      "server/dbi/mysql.js",
      "server/libs/mysql/api_without_pool.js",
      "server/libs/mysql/api.js"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/kapp.git"
  },
  "keywords": [],
  "author": {
    "name": "Mobilabs",
    "email": "contact@mobilabs.fr",
    "url": "http://www.mobilabs.fr"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/kapp/issues"
  },
  "homepage": "https://github.com/jclo/kapp",
  "dependencies": {
    "@mobilabs/kzlog": "^1.0.3",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "mongodb": "^4.10.0",
    "mysql": "^2.18.1",
    "node-fetch": "^2.6.7",
    "nopt": "^6.0.0",
    "picodb": "^1.0.4",
    "shelljs": "^0.8.5",
    "sqlite3": "^5.1.1"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "del": "^7.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "open": "^8.4.0",
    "opener": "^1.5.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false
}
