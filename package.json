{
  "name": "@mobilabs/kapp",
  "version": "1.0.3-beta.5",
  "description": "A boilerplate for a slim Node.js App server",
  "main": "index.js",
  "bin": {
    "kapp": "./bin/kapp.js"
  },
  "scripts": {
    "app": "node server/start.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov mocha ./test/main.js --exit",
    "display-coverage": "opener ./coverage/lcov-report/index.html",
    "check-coverage": "nyc check-coverage --statements 60 --branches 45 --functions 60 --lines 65",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "report": "nyc report",
    "makeprod": "sh tasks/prod.sh _prod",
    "doc": ""
  },
  "nyc": {
    "include": [
      "server/**/*.js"
    ],
    "exclude": [
      "server/config.js",
      "server/dbi/mysql.js",
      "server/libs/mysql/api_without_pool.js",
      "server/libs/mysql/api.js"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/kapp.git"
  },
  "keywords": [],
  "author": {
    "name": "Mobilabs",
    "email": "contact@mobilabs.fr",
    "url": "http://www.mobilabs.fr"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/kapp/issues"
  },
  "homepage": "https://github.com/jclo/kapp",
  "dependencies": {
    "@mobilabs/kasar": "^1.0.4",
    "@mobilabs/kzlog": "^1.0.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "mysql": "^2.18.1",
    "nopt": "^5.0.0",
    "picodb": "^1.0.0",
    "shelljs": "^0.8.4",
    "sqlite3": "5.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "del": "^6.0.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "mocha": "^8.2.1",
    "node-fetch": "^2.6.1",
    "nyc": "^15.1.0",
    "open": "^7.3.1",
    "opener": "^1.5.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run check-coverage && npm run report"
    }
  }
}
